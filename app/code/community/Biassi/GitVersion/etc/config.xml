<?xml version="1.0"?>
<config>
    <modules>
        <Biassi_GitVersion>
            <version>1.0.0</version>
        </Biassi_GitVersion>
    </modules>	
    <global>
        <blocks>
            <biassi_gitversion>
                <class>Biassi_GitVersion_Block</class>
            </biassi_gitversion>
        </blocks>
        <helpers>
            <biassi_gitversion>
                <class>Biassi_GitVersion_Helper</class>
            </biassi_gitversion>
        </helpers>
        <models>
            <biassi_gitversion>
                <class>Biassi_GitVersion_Model</class>
            </biassi_gitversion>
        </models>
    </global>    
    <adminhtml>
        <layout>
            <updates>
                <biassi_gitversion>
                    <file>biassi/gitversion.xml</file>
                </biassi_gitversion>
            </updates>
        </layout>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <biassi>
                                            <title>Biassi - All</title>
                                        </biassi>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>       
</config>